% This is file dingbat.sty, to set up suitable macros
% for using the Zapf Dingbat font
%
%
% first either activate the font loading, or
% set it up from scratch
%
\ifx\load@dingbat\undefined
\declare@font{dingbat}{m}{n}{pzdr}
\extra@def{dingbat}{}{}
\subst@fontshape{dingbat}{m}{sc}{dingbat}{m}{n}
\subst@fontshape{dingbat}{bx}{sc}{dingbat}{m}{n}
\subst@fontshape{dingbat}{m}{u}{dingbat}{m}{n}
\subst@fontshape{dingbat}{m}{sl}{dingbat}{m}{n}
\subst@fontshape{dingbat}{b}{m}{dingbat}{m}{n}
\subst@fontshape{dingbat}{b}{it}{dingbat}{m}{n}
\subst@fontshape{dingbat}{bx}{m}{dingbat}{m}{n}
\subst@fontshape{dingbat}{bx}{it}{dingbat}{m}{n}
\else
\load@dingbat
\fi
\ifx\load@symbol\undefined
\declare@font{symbol}{m}{n}{psyr}
\extra@def{symbol}{}{}
\subst@fontshape{symbol}{m}{sc}{symbol}{m}{n}
\subst@fontshape{symbol}{bx}{sc}{symbol}{m}{n}
\subst@fontshape{symbol}{m}{u}{symbol}{m}{n}
\subst@fontshape{symbol}{m}{sl}{symbol}{m}{n}
\subst@fontshape{symbol}{b}{m}{symbol}{m}{n}
\subst@fontshape{symbol}{b}{it}{symbol}{m}{n}
\subst@fontshape{symbol}{bx}{m}{symbol}{m}{n}
\subst@fontshape{symbol}{bx}{it}{symbol}{m}{n}
\else
\load@symbol
\fi
% 
% Now some useful commands; they all assume you know the character
% number of the (unmapped) font
%
\newcommand{\dingbats}{\fontfamily{dingbat}%
\fontseries{m}\fontshape{n}\selectfont}
\newcommand{\symbolfont}{\fontfamily{symbol}%
\fontseries{m}\fontshape{n}\selectfont}
% 
%
\newcommand{\ding}[1]{{\dingbats\char#1}}
\newcommand{\Symb}[1]{{\symbolfont\char#1}}
%
% Usage: \ding{53}
%
\def\dingfill#1{\leaders\hbox{\makebox[0.2in]{\ding{#1}}}\hfill}
%
% Usage: \dingfill{65}
%
\newcommand{\dingline}[1]{\par\hspace{0.25in}%
\dingfill{#1}\hspace{0.25in}\par}
%
% definition of dinglist
\newenvironment{dinglist}[1]%
{\begin{list}{\ding{#1}}{}}%
{\end{list}}%
