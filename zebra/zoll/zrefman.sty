%%%%%%%%%%%%%%%%%%%%%%%% redefine chapter layout %%%%%%%%%%%%%%%%%%%%%%%
\def\@makechapterhead#1{                 % Heading for \chapter command
 \vspace*{1pt}                          % Space at top of text page.
  { \parindent 0pt \raggedright
    \ifnum \c@secnumdepth >\m@ne \fi     % IF secnumdepth > -1 THEN
      \Large\bf \@chapapp{} \thechapter: % Print 'Chapter' and number.
    \ \Large\bf #1\par                   % Title.
    \nobreak                             % Penalty to prevent page break
    \vskip 20pt                          % Space between title and text.
  } }
%
\def\chapter{\cleardoublepage  % Starts new right-hand page.
   \thispagestyle{heading}     % Page style of chapter page.
   \global\@topnum\z@          % Prevents figures from going at
                               % top of page.
   \@afterindentfalse          % Suppresses indent in first paragraph.
   \secdef\@chapter\@schapter} % to \@afterindenttrue to have indent.
