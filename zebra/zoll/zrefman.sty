%%%%%%%%%%%%%%%%%%%%%%%% redefine head and foot %%%%%%%%%%%%%%%%%%%%
\renewcommand{\@oddhead}{\hfil{Zebra Reference Manual}\hfil}
\renewcommand{\@evenhead}{\hfil{Zebra Reference Manual}\hfil}
\renewcommand{\@oddfoot}{\rm\thepage\hfil\rm\rightmark}
\renewcommand{\@evenfoot}{\rm\rightmark\hfil\rm\thepage}
\renewcommand{\chaptermark}[1]{}
\renewcommand{\sectionmark}[1]{}
\def\cmark#1{\markright{ %
              \ifnum \c@secnumdepth >\m@ne \thesection\ \fi #1} }
\def\smark#1{\markright{%
              \ifnum \c@secnumdepth >\z@ \thesection\ \fi #1} }
\def\bmark#1{\markright{#1} }
