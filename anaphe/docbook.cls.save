\def\ps@headings{%
   \let\@mkboth\markboth
   \def\@oddfoot{}%
   \def\@evenfoot{}%
   \def\@evenhead{\rmfamily\thepage\hfil \textit{\leftmark}}%
   \def\@oddhead{\hbox{}\textit{\rightmark}\hfil\rmfamily\thepage}%
   \def\chaptermark##1{\markboth{%
       \ifnum \c@secnumdepth>\m@ne
          \@chapapp\ \thechapter. \
       \fi
       ##1}{}%
   }%
   \def\sectionmark##1{%
      \markright{%
       \ifnum \c@secnumdepth >\z@
         \thesection. \
       \fi
       ##1}
   }%
}
