\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{gfhead}[1994/08/13 gf header defaults]

\let\@docnum\@empty
\newcommand{\docnum}[1]{\gdef\@docnum{#1}}

% Macro which allows \pagestyle{docnum} to put a ref: label at the foot
% of the first page.
\newcommand{\ps@docnum}
{%
  \renewcommand{\@oddfoot}
   {%
    \ifx\@empty\@docnum
    \relax
    \else
     {\normalfont\footnotesize ref: \@docnum}%
    \fi
    \hfil
   }%
  \let\@evenfoot\@oddfoot
  \def\@oddhead{}%
  \def\@evenhead{}%
}

\let\@copyrite\@empty
\newcommand{\copyrite}[1]{\renewcommand{\@copyrite}{#1}}

\let\@abstract\@empty
\newcommand{\gfabstract}[1]{\renewcommand{\@abstract}{#1}}

% Table of contents.
\newcommand{\@needtoc}{0}
\newcommand{\gftoc}{\renewcommand{\@needtoc}{1}}

% List of figures.
\newcommand{\@needlof}{0}
\newcommand{\gflof}{\renewcommand{\@needlof}{1}}

