\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{gfstructure}[1995/09/21 gf structure defaults]

% Add missing sectioning macros.
% The letter style does not declare any section macros.

\@ifundefined{section}{
  \newcounter {section}
  \newcounter {subsection}[section]
  \newcounter {subsubsection}[subsection]
  \renewcommand{\thesection}{\arabic{section}}
  \renewcommand{\thesubsection}{\thesection.\arabic{subsection}}
  \renewcommand{\thesubsubsection}{\thesubsection .\arabic{subsubsection}}
  \newcommand{\section}
	{\@startsection {section}{1}{\z@}{-3.5ex plus -1ex minus 
	 -.2ex}{2.3ex plus .2ex}{\reset@font\Large\bf}}
  \newcommand{\subsection}
	{\@startsection{subsection}{2}{\z@}{-3.25ex plus -1ex minus 
	 -.2ex}{1.5ex plus .2ex}{\reset@font\large\bf}}
  \newcommand{\subsubsection}
	{\@startsection{subsubsection}{3}{\z@}{-3.25ex plus 
	 -1ex minus -.2ex}{1.5ex plus .2ex}{\reset@font\normalsize\bf}}
  }{}
